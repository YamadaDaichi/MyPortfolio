<h2 class="text-center p-4"><strong>授業評価</strong></h2>
<div class="mx-auto w-50">
<%= search_form_for @q, url: ratings_path do |f| %>
  <%= f.search_field :subject_name_cont, class: 'form-control mb-3', placeholder: '授業名を検索' %>
  <%= f.search_field :professor_name_cont, class: 'form-control mb-3', placeholder: '教授名を検索' %>
  <%= f.submit '検索', class: 'btn btn-primary mb-4' %>
<% end %>
</div>
  <div class="container">
    <% @ratings.each do |rating| %>
    <div class="card w-50 mx-auto mb-3">
      <div class="card-body">
        <div class="row">
          <div class="">
            <h4 class="card-title">
              <strong><%= rating.subject_name %></strong>
            </h4>
            <p class=" "><%= rating.faculty %> <%= rating.department %></p>
            <p><%= rating.professor_name %></p>
            <%= link_to "詳しい情報を見る", rating_path(rating.id), class: "" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <%= paginate @ratings %>
  </div>
