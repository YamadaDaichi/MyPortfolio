<div class="profile-wrap m-4">
  <div class="row text-center">
    <div class="col-4">
      <%= attachment_image_tag @user, :profile_image, :fill, 120, 120, format: 'jpeg', fallback: "no_image.jpg", class: 'rounded-circle' %>
    </div>
    <div class="col-8 text-center">
      <div class="row">
        <h3><%= @user.name %></h3>
        <div class="mt-2 ml-3"><%= @user.email %></div>
      </div>
      <div class="row">
        <% if @user.id == current_user.id %>
          <%= link_to "プロフィールを編集", edit_user_path(@user) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<h3 class="text-center p-4"><strong>投稿一覧</strong></h3>
  <div class="container">
    <% @ratings.each do |rating| %>
    <div class="card w-50 mx-auto mb-3">
      <div class="card-body">
        <div class="row">
          <div class="">
            <h4 class="card-title">
              <strong><%= rating.subject_name %></strong>
            </h4>
            <p class=" "><%= rating.faculty %> <%= rating.department %></p>
            <p><%= rating.nickname %></p>
            <%= link_to "詳しい情報を見る", rating_path(rating.id), class: "" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

